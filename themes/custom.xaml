<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">


    <Style x:Key="DefaultButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="#4A148C"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="white"/>
    </Style>

    <Style x:Key="DefaultBoldTextSmall" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#4A148C"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="DefaultBoldTextMedium" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#4A148C"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Margin" Value="10,195,0,10"/>
    </Style>
    
    <Style x:Key="DefaultComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignTextboxBorderBrush}"/>
        <Setter Property="Foreground" Value="#4A148C"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Height" Value="30"/>
    </Style>

    <Style x:Key="DefaultTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="Width" Value="200"/>
        <Setter Property="Foreground" Value="#4A148C"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignTextboxBorderBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>
    
    <Style x:Key="UpdateButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="#4A148C"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Content">
            <Setter.Value>
                <materialDesign:PackIcon Kind="Cog" Width="32" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DefaultButtonSmall" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="#4A148C"/>
        <Setter Property="Content" Value="X"/>
        <Setter Property="Width" Value="45"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="white"/>
    </Style>

    <Style x:Key="DefaultListText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#4A148C"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="SettingsTitle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#4A148C"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="MenuButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="Transparent"/>

        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style x:Key="MenuIcon" TargetType="materialDesign:PackIcon">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="MoneyTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="55"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="20,30,0,10"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="White" Direction="315" ShadowDepth="5" BlurRadius="10" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SmartTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="45"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="65,-30,30,20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#270a49"/>
        <Setter Property="Width" Value="207"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="White" Direction="315" ShadowDepth="5" BlurRadius="10" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="background-right" TargetType="Grid">
        <Setter Property="Background" Value="white"/>
    </Style>

    <Style x:Key="background-left" TargetType="Border">
        <Setter Property="Background" Value="#4A148C"/>
    </Style>
    
    <Style x:Key="pieItem1Style" TargetType="lvc:PieSeries">
        <Setter Property="Fill" Value="#4A148C"/>
        <Setter Property="DataLabels" Value="false"/>
        <Setter Property="Fill" Value="#270a49"/>
    </Style>

    <Style x:Key="pieItem2Style" TargetType="lvc:PieSeries">
        <Setter Property="Fill" Value="#4A148C"/>
        <Setter Property="DataLabels" Value="false"/>
        <Setter Property="Fill" Value="#320e5f"/>
    </Style>

    <Style x:Key="pieItem3Style" TargetType="lvc:PieSeries">
        <Setter Property="Fill" Value="#4A148C"/>
        <Setter Property="DataLabels" Value="false"/>
        <Setter Property="Fill" Value="#3e1176"/>

    </Style>

    <Style x:Key="pieItem4Style" TargetType="lvc:PieSeries">
        <Setter Property="Fill" Value="#4A148C"/>
        <Setter Property="DataLabels" Value="false"/>
        <Setter Property="Fill" Value="#4a148c"/>

    </Style>

    <Style x:Key="pieItem5Style" TargetType="lvc:PieSeries">
        <Setter Property="Fill" Value="#4A148C"/>
        <Setter Property="DataLabels" Value="false"/>
        <Setter Property="Fill" Value="#5617a2"/>

    </Style>

    <Style x:Key="pieItem6Style" TargetType="lvc:PieSeries">
        <Setter Property="Fill" Value="#4A148C"/>
        <Setter Property="DataLabels" Value="false"/>
        <Setter Property="Fill" Value="#621ab9"/>

    </Style>

    <Style x:Key="pieItem7Style" TargetType="lvc:PieSeries">
        <Setter Property="Fill" Value="#4A148C"/>
        <Setter Property="DataLabels" Value="false"/>
        <Setter Property="Fill" Value="#6d1fd0"/>
    </Style>

    <Style x:Key="DashboardTitles" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="#4A148C" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#4A148C" Direction="315" ShadowDepth="5" BlurRadius="10" Opacity="0.6" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BalanceInfo" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#4A148C"/>
        <Setter Property="Margin" Value="0,5,0,5"/>
    </Style>

    <Style x:Key="BalanceValues" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#320e5f"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>


    <Style x:Key="GoalTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#4A148C"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <Style x:Key="GoalProgressBarStyle1" TargetType="ProgressBar">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="#320e5f"/>
        <Setter Property="Background" Value="#f0f0f0"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <Style x:Key="GoalProgressBarStyle2" TargetType="ProgressBar">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="#5617a2"/>
        <Setter Property="Background" Value="#f0f0f0"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <Style x:Key="GoalProgressBarStyle3" TargetType="ProgressBar">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="#621ab9"/>
        <Setter Property="Background" Value="#f0f0f0"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <Style x:Key="GoalProgressBarStyle4" TargetType="ProgressBar">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="#4A148C"/>
        <Setter Property="Background" Value="#f0f0f0"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <Style x:Key="ColumnSeriesStyle1" TargetType="lvc:ColumnSeries">
        <Setter Property="Fill" Value="#4A148C"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="Stroke" Value="#320e5f"/>
    </Style>

    <Style x:Key="ColumnSeriesStyle2" TargetType="lvc:ColumnSeries">
        <Setter Property="Fill" Value="#5617a2"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="Stroke" Value="#3e1176"/>
    </Style>

    <Style x:Key="popUpBackground" TargetType="Grid">
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style x:Key="loginStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0,-10,0,0"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="blue" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,10"/>
        <Setter Property="Foreground" Value="Blue"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style x:Key="bigLogin" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#4A148C"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>


